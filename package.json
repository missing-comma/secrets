{
	"name": "@missing-comma/secrets",
	"version": "1.10.0",
	"scripts": {
		"start": "node ./dist/secrets.js",
		"ts-start": "ts-node --esm  ./src/index.ts",
		"setup": "npm i -g .",
		"build": "rm -rf ./dist && tsc",
		"build:ci": "tsc -p ./tsconfig.ci.json && rm -rf ./dist/__tests__",
		"dev": "tsc --watch",
		"lint": "echo 'haha lint, nice one'",
		"format": "prettier ./src --config ./.prettierrc --write",
		"testo": "prettier ./src --config ./.prettierrc --check . && xo && ava",
		"test": "echo 'haha test, nice one'",
		"prepublishOnly": "npm run test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run build:ci && npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"bin": "dist/secrets.js",
	"type": "module",
	"engines": {
		"node": ">=14"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@types/bcrypt": "^5.0.0",
		"argon2": "^0.30.3",
		"bcrypt": "^5.1.0",
		"chalk": "4",
		"clipboardy": "^3.0.0",
		"convict": "^6.2.4",
		"find-up": "^6.3.0",
		"ink": "^4.1.0",
		"ink-select-input": "^5.0.0",
		"ink-spinner": "^5.0.0",
		"react": "^18.2.0",
		"readline": "^1.3.0",
		"yargs": "^17.7.2",
		"zustand": "^4.3.8"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/convict": "^6.1.1",
		"@types/jest": "^29.5.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"jest": "^29.5.0",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/missing-comma/private-get.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/missing-comma/private-get/issues"
	},
	"homepage": "https://github.com/missing-comma/private-get#readme",
	"description": ""
}
